<Window x:Class="Ordenes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ordenes"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="255">
    <Grid >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Button x:Name="ProductoButton" Content="Producto" HorizontalAlignment="Left" Height="26" Margin="100,28,0,0" VerticalAlignment="Top" Width="66" Background="#FF07A207" Click="ProductoButton_Click"/>
        <Button x:Name="OrdenButton" Content="Orden" HorizontalAlignment="Left" Height="26" Margin="100,75,0,0" VerticalAlignment="Top" Width="66" Background="#FF28C7C7" Click="OrdenButton_Click"/>


    </Grid>
</Window>
